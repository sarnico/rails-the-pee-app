  <div class="container">
    <div class="user-info-container">
      <h1>Create a new toilet</h1>

      <%= simple_form_for [@user, @toilet] do |f| %>
        <%= f.error_notification %>


  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :min_booking_time %>
  <%= f.input :max_booking_time %>

  <%= f.input :image, as: :file %>
  <%= f.button :submit, class: "btn-primary" %>
 <% end %>
