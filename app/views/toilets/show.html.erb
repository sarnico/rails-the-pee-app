<h1>toilet's name : <%= @toilet.name %></h1>
<h2>toilet's address : <%= @toilet.address %></h2>

ICI FORM POUR BOOKER TOILET


<%= simple_form_for [@toilet, @booking] do |f| %>
  <%= f.input :date %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>

<h3> liste des bookings</h3>

<% Booking.all.each do |booking| %>
<ul>
  <li> <%= booking.date %></li>
</ul>
<% end %>
<% toilet_calendar = @toilet.bookings.map do |booking| %>
  <% { start: booking.date, end: booking.date + 120.minutes } %>
<% end %>
<div id='calendar' data-toilet-id="<%= @toilet.id.to_s %>" data-booking="<%= (toilet_calendar).to_json %>"></div>

